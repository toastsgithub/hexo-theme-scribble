h2,
h3,
h4,
h5 {
  margin: 2em 0 1em;
}

html,
body {
  height: 100%;
}

body {
  background: #f9f9f9;
  color: #303030;
  font-family: "Blogger Sans", "Helvetica Neue", Arial, sans-serif;
  font-weight: 400;
  font-size: 13px;
  line-height: 19px;
  padding: 0;
  margin: 0;
}

#go-back-home {
  margin: 40px 0 0;
  &:hover {
    background-image: none;
  }
}

.muted {
  color: #8f8f8f;
}

blockquote {
  margin: 0;
  font-style: normal !important;
}

header {
  text-align: center;
}

footer {
  width: 100%;
  max-width: 768px;
  line-height: 2em;
  margin: auto;
  padding-bottom: 30px;
  text-align: center;
  * {
    color: #797979;
  }
}

.content {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  border-width: 0;
  border-style: solid;
  padding: 30px 60px;
  margin: auto;
}

a,
.as-link {
  text-decoration: none;
  color: #269;
  display: inline-block;
  vertical-align: baseline;
  zoom: 1;
  *display: inline;
  *vertical-align: auto;
  -webkit-transition: color 0.3s;
  -moz-transition: color 0.3s;
  -ms-transition: color 0.3s;
  -o-transition: color 0.3s;
  transition: color 0.3s;
}

a.main,
a:hover,
.as-link.main,
.as-link:hover {
  color: #1d5884;
  background-image: url(../images/line.png);
  background-repeat: repeat-x;
  background-position: left bottom;
}

hr {
  border: 0;
  border-bottom: 1px dotted #CCC;
  margin: 25px 0;
}

img {
  max-width: 100%;
}

iframe {
    max-width: 100%;
}

form {
    margin: 1em 0;
}

ul,
ol {
    padding: 0 0 0 30px;
}

ul.posts,
ul.posts li {
    margin: 0;
    padding: 0;
    list-style: none;
}

ul.posts li {
  margin-bottom: 20px;
  font-weight: 900;
}

